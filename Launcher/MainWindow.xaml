<Window x:Class="FoM.Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Face of Mankind: Fall of the Dominion" MinWidth="400" MinHeight="200" Width="400" Height="200">
    <DockPanel ScrollViewer.VerticalScrollBarVisibility="Disabled" UseLayoutRounding="False">
        <DockPanel DockPanel.Dock="Bottom" Margin="5">
            <Button Margin="5" Content="Options" />
            <Button Content="Start" Margin="5" DockPanel.Dock="Right" />
            <ProgressBar MinWidth="150" Margin="5" />
        </DockPanel>
        <TextBox Text="TextBox" MinLines="3" IsUndoEnabled="False" IsReadOnly="True" DockPanel.Dock="Top" Margin="5" />
    </DockPanel>
</Window>
